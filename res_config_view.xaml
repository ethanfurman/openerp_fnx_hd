!!! xml1.0
%openerp
    %data

        %record model='ir.ui.view' #view_fnx_hd_config_settings
            @name: fnx.help_desk.config.settings
            @model: fnx.help_desk.config.settings
            @arch type='xml'
                %form $Configure_Fnx_Help_Desk .oe_form_configuration version='7.0'
                    %header
                        %button @execute $Apply .oe_highlight type='object'
                        or
                        %button @cancel $Cancel .oe_link type='object'
                    %group groups='base.group_multi_company'
                        %div
                            %label $Select_Company for='company_id'
                            @company_id .oe_inline on_change='onchange_company_id(company_id, context)' widget='selection'
                    %separator $Users_to_notify
                    %group
                        %label for='id' $Triage
                        %div @triage
                            %div
                                @triagers
                                    %tree
                                        @name
                                        @login
                    %group
                        %label for='id' $In-House
                        %div @inhouse
                            %div
                                @inhousers
                                    %tree
                                    @name
                                    @login
                    %group
                        %label for='id' $EvS
                        %div @evs
                            %div
                                @evsers
                                    %tree
                                    @name
                                    @login

        %record model='ir.actions.act_window' #action_fnx_hd_config
            @name: Configure Fnx Help Desk
            @type: ir.actions.act_window
            @res_model: fnx.help_desk.config.settings
            @view_mode: form
            @target: inline

        %menuitem name='Fnx Help Desk' #menu_fnx_hd_config action='action_fnx_hd_config' parent='base.menu_config' sequence='15'
